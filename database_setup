import sqlite3

conn = sqlite3.connect('laws.db')
cursor = conn.cursor()

cursor.execute('''
CREATE TABLE acts (
    id INTEGER PRIMARY KEY,
    name TEXT,
    keywords TEXT
)
''')

cursor.execute('''
CREATE TABLE sections (
    id INTEGER PRIMARY KEY,
    act_id INTEGER,
    section_number TEXT,
    description TEXT,
    keywords TEXT,
    FOREIGN KEY(act_id) REFERENCES acts(id)
)
''')

conn.commit()
conn.close()
